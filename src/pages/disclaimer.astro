<BaseLayout title="Disclaimer"
description="Read the Nexusario Disclaimer regarding product information, third-party platforms, and limitations of liability.">
  <main class="legal-page">
    <header class="legal-header" style="text-align: center; margin-bottom: 2.4rem;">
      <h1><br>Disclaimer</h1>
    </header>

    <!-- Last updated -->
    <div class="product-features">
      <div class="inner features-inner">
        <div class="feature-card">
          <p class="feature-desc" style="font-weight: bold; color: #555;">
            Last updated: {new Date().getFullYear()}
          </p>
        </div>
      </div>
    </div>

    <!-- Disclaimer content -->
    <div class="product-features">
      <div class="inner features-inner">
        {features.map((item) => (
          <div class="feature-card">
            <div class="feature-head">
              <span class="feature-icon" set:html={item.icon}></span>
              <span class="feature-title">{item.title}</span>
            </div>
            <p class="feature-desc" set:html={item.description}></p>
          </div>
        ))}
      </div>
    </div>
  </main>
</BaseLayout>

<style>
/* Card */
.feature-card {
  background: var(--bg-box);
  border-radius: 18px;
