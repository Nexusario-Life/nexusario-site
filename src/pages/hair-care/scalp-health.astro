                <text x="200" y="25" text-anchor="middle" font-size="13">Barrier</text>
                <line x1="200" y1="40" x2="200" y2="60" stroke="currentColor"/>

                <text x="365" y="135" text-anchor="end" font-size="13">Microbiome</text>
