    <!-- Privacy content in feature boxes -->
    <div class="product-features">
      <div class="inner features-inner">
        {features.map((item) => (
          <div class="feature-card">
            <div class="feature-head">
              <span class="feature-icon" set:html={item.icon}></span>
              <span class="feature-title">{item.title}</span>
            </div>
            <p class="feature-desc" set:html={item.description}></p>
          </div>
        ))}
